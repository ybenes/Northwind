@using Northwind.Model.Entity;
@using Northwind.Model.ViewModel.Areas.Admin;
@{
    Layout = "/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@model KategoriViewModel



<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">


                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Kategoriler</h3>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <table id="tblKategoriler" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>Kategori No</th>
                                    <th>Kategori Adı</th>
                                    <th>Açıklama</th>
                                    
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (Kategori item in Model.KategoriListesi)
                                {
                                    <tr>
                                        <td>@item.KategoriID</td>
                                        <td>
                                            @item.KategoriAdi
                                        </td>
                                        <td>

                                            @if (item.KategoriAdi != null)
                                            {
                                                @item.Aciklama

                                            }
                                            else
                                            {

                                            }



                                        </td>
                                  
                                    </tr>
                                }



                            </tbody>

                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</section>


